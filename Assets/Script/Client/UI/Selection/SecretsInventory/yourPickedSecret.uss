:root{
    --color_pink: #F7CBE9;
    --color_pinkDark: #ea88d0;
    --color_blueDark: #3671bf;
    --color_blue: #00ccff;
    --color_blueLight: #a2ddf4;
    --color_greenDark: #b6d96a;
    --color_green: #c2d918;
    --color_black: #000000;
    --color_white: #ffffff;
    --color_Alpha: rgba(0,0,0,0.5);
    font-size: 92%;
    -unity-text-align: middle-right;
}
.your-picked-secret{
    display: flex;
    height: 100%;
    width: 100%;
    padding: 5%;
    position: relative;
}

.Panel {
    position: relative;
    height: 100%;
    width: 100%;
}

.Container, .quitButton, .commentL, .title, .paragraph{
    position: absolute;
    height: 35%;
    width: 100%;
    bottom: 0%;
    padding: 0;
    -unity-font-style: bold;
    -unity-text-align: middle-center;
    -unity-text-overflow-position: middle;
    align-self: center;
    white-space: normal;
    border-width: 5px;
    border-radius: 10px;
    background-color: var(--color_pink);
    border-color: var(--color_white);
    color: var(--color_black);
    font-size: 100%;
}

.title, .paragraph{
    position: relative;
    padding: 0%;
    height: 10%;
    background-color: transparent;
    border-width: 0;
    font-size: 150%;
}

.paragraph{
    padding: 0;
    position: relative;
    width: 90%;
    height: 40%;
    font-size: 100%;
}

.scrollContainer{
    align-self: center;
    width: 90%;
    height: 46%;
    margin: 1%;
    bottom: 0%;
    padding-bottom: 2px;
    background-color: var(--color_pinkDark);
    border-color: var(--color_white);
    border-width: 4px;
    border-radius: 10px;
    display: flex;
}

.scroll-bar {
  width: 7px;
  height: 100%;

  background-color: var(--color_pinkDark);
}

.scroll-bar__thumb {
  background-color: var(--color_white);
  border-radius: 5px;
}

.scroll-bar__thumb:hover {
  background-color: #fff;
}

.commentL {
    position: relative;
    margin: 3px;
    padding: 5px;
    width: 90%;
    height: 100%;
    text-overflow: ellipsis;
    align-self: center;
    background-color: var(--color_pink);
}

.reportB {
    right: 0;
    top: 0;
    width: 7%;
    height: 100%;
    position: absolute;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    background-color: transparent;
    border-radius: 0;
    background-image: url("../../../../../Addons/Placeholders/flag_red.png");
}

.quitButton {
    position: absolute;
    top: 2px;
    left: 2px;
    height: 25px;
    width: 25px;
    padding: .25px;
    border-width: 3px;
    background-color: red;
    font-size: 100%;
    color: white;
}

.ButtonPress{
    background-color: var(--color_blue);
    border-color: var(--color_white);
    color: var(--color_white);
}
